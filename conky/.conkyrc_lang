background yes
update_interval 0.5
total_run_times 0



own_window yes
own_window_class Conky
own_window_type normal
own_window_hints undecorated,above,sticky,skip_taskbar,skip_pager
own_window_transparent no
own_window_colour black
use_xft yes
xtfalpha1
xftfont monospace:size=9

double_buffer yes
minimum_size 1 1
#maximum_height 2
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no
default_color gray
default_shade_color 000000
default_outline_color d9d7d6
alignment bottom_right
gap_x 90
gap_y -35
no_buffers yes
uppercase no
override_utf8_locale no
color1 red
color2 gray
color3 yellow

##############################################
#  Output
##############################################
TEXT
${color3}${pre_exec ~/lang_ind.sh mes}

